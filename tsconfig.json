{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@algorithms/*": [
        "algorithms/*"
      ],
      "@structures/*": [
        "structures/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
